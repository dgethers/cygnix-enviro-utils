#!/bin/bash
export EDITOR=vi

PS1='\[\e[1;31m\]\W\[\e[m\] \[\e[1;34m\]$\[\e[m\] '
if [[ "$TERM" == xterm* ]] ; then
  TITLEBAR='\[\033]0;\u@\h:\w\007\]'
  PS1="$TITLEBAR$PS1"
  TITLEBAR=""
fi

_lesspipe="$(which lesspipe.sh)"
[[ -x "$_lesspipe" ]] && export LESSOPEN="|${_lesspipe} %s" || true

source_pragma_once ~/bashrc.d/*-env

[[ -n "$COLORFGBG" ]] || export COLORFGBG="15;0"
