#!/bin/bash
# ssh-agent
# shamelessly adapted (plagiarized) from some stack exchange thread

source_pragma_once ~/bashrc.d/env

SSH_ENV="$HOME/.ssh/environment"

function start_agent {
     echo "Initialising new SSH agent..."
     /usr/bin/ssh-agent > "${SSH_ENV}"
     echo succeeded
     chmod 600 "${SSH_ENV}"
     . "${SSH_ENV}" #> /dev/null
     /usr/bin/ssh-add
}

# Source SSH settings, if applicable

if [ -f "${SSH_ENV}" ]; then
     . "${SSH_ENV}" # > /dev/null

     # ps ${SSH_AGENT_PID} doesn't work under cywgin
     if ! ps ${CYGWIN:+-p} ${SSH_AGENT_PID} | grep -m1 ssh-agent$ > /dev/null
     then start_agent
     else echo previous agent ${SSH_AGENT_PID} is still running
     fi
else
     start_agent;
fi
